import random
def main():

    def create_deck():
        suits = ['Hearts', 'Diamonds', 'Clubs', 'Spades']
        ranks = ['2', '3', '4', '5', '6', '7', '8', '9', '10', 'Jack', 'Queen', 'King', 'Ace']
        deck = [(rank, suit) for suit in suits for rank in ranks]
        return deck

    deck = create_deck()


    def shuffle_deck(deck):
        random.shuffle(deck)
        print("Deck has been shuffled.")
        return deck

    shuffled_deck = shuffle_deck(deck)

    def deal_cards_fixed(deck, num_players, cards_per_player):
        """Deals a fixed number of cards to multiple players."""
        hands = [[] for _ in range(num_players)]
    
        for player_index in range(num_players):
            start_index = player_index * cards_per_player
            end_index = start_index + cards_per_player
            hands[player_index] = deck[start_index:end_index]
    
        # Update the deck to reflect the remaining cards
        remaining_deck = deck[num_players * cards_per_player:]
    
        return hands, remaining_deck

# Example usage for a 2-player game, 5 cards each:
    hands, remaining_deck = deal_cards_fixed(shuffled_deck, num_players=2, cards_per_player=2)

    print(f"\nPlayer 1's hand: {hands[0]}")
    print(f"Player 2's hand: {hands[1]}")
   


    return

if __name__ == "__main__":
    main()